			\includegraphics[width=\picwidth]{#2}%
			\if@filenames \mbox{}\\[-3ex]%
				\_\textcolor{red}{
					\textbf{\StrSubstitute{#2}{_}{\_}}
				} %\\[0cm]%
			\fi%
			\ifthenelse{\equal{#3}{}}{}{%
				%			\vskip\borderwidth%
				\caption{\color{\captioncolor}\textbf{\protect\capt} \protect\subcapt}%
			}%
		\end{mdframed}%
	\end{figure}%
}



